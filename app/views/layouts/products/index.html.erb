<h1> Add Products to Cart </h1>

<% if session[:cart].length > 0 %>
  <br><%= Your Cart: %> %>
  <% session[:cart].each do |p| %>
    <li><%= p %></li>
  <% end %>
<% end %>


<%= form_tag add_product_path, method: "post" do %>
  <label> Product </label><br>
  <%= text_field_tag :'product' %><br>
  <%= submit_tag "Add to Cart" %>
<% end %>
